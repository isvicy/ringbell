machine:
  network:
    hostname: "${hostname}"
    interfaces:
      - deviceSelector:
          hardwareAddr: "${mac}"
        dhcp: false
        addresses:
          - "${ip}/${cidr}"
        routes:
          - network: "0.0.0.0/0"
            gateway: "${gateway}"
    nameservers:
      - "${dns1}"
      - "${dns2}"
